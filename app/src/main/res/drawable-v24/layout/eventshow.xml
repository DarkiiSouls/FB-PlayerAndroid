<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/eventshowimage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/imagenotfound" />

        <TextView
            android:id="@+id/eventshowtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eventshowimage"
            android:layout_alignStart="@+id/eventshowimage"
            android:layout_below="@+id/eventshowimage"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:maxLines="1"
            android:text="..."
            android:textSize="20sp" />

        <TextView
            android:id="@+id/eventshowloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eventshowtitle"
            android:layout_alignStart="@+id/eventshowtitle"
            android:layout_below="@+id/eventshowtitle"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="..."
            android:textSize="17sp" />

        <TextView
            android:id="@+id/eventshowprize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eventshowloc"
            android:layout_alignStart="@+id/eventshowloc"
            android:layout_below="@+id/eventshowloc"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="..."
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/eventshowfav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/eventshowprize"
            android:layout_alignEnd="@+id/eventshowimage"
            android:layout_alignRight="@+id/eventshowimage"
            android:clickable="true"
            app:srcCompat="@drawable/fav" />

        <TextView
            android:id="@+id/eventshowtimem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eventshowimage"
            android:layout_alignStart="@+id/eventshowimage"
            android:layout_alignTop="@+id/eventshowtitle"
            android:maxLength="3"
            android:maxLines="1"
            android:text="..."
            android:textColor="@android:color/holo_red_dark"
            android:textColorHint="@android:color/holo_blue_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/eventshowtimed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eventshowtimem"
            android:layout_alignStart="@+id/eventshowtimem"
            android:layout_alignTop="@+id/eventshowloc"
            android:maxLength="2"
            android:maxLines="1"
            android:text="..."
            android:textSize="17sp" />

        <TextView
            android:id="@+id/eventshowtimeh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eventshowtimed"
            android:layout_alignStart="@+id/eventshowtimed"
            android:layout_alignTop="@+id/eventshowprize"
            android:layout_marginBottom="20dp"
            android:maxLines="1"
            android:text="..."
            android:textSize="15sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
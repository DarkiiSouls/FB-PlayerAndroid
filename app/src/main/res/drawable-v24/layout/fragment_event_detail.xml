<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zeki.faaliyethane.EventDetailFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp">


        <RelativeLayout
            android:id="@+id/detailrl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp">

            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:src="@drawable/imagenotfound" />

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detailImage"
                android:layout_alignStart="@+id/detailImage"
                android:layout_below="@+id/detailImage"
                android:layout_marginLeft="20dp"
                android:text="Title"
                android:textSize="30sp" />

            <View
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/detailPrize"
                android:layout_margin="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/eddesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView5"
                android:layout_alignStart="@+id/imageView5"
                android:layout_below="@+id/titleView"
                android:text="Açıklama"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/detailPrize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView5"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView5"
                android:text="..."
                android:textSize="19sp" />

            <TextView
                android:id="@+id/detailDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/eddesc"
                android:layout_alignStart="@+id/eddesc"
                android:layout_below="@+id/eddesc"
                android:layout_marginTop="15dp"
                android:text=".."
                android:textSize="20sp" />

            <View
                android:id="@+id/descView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/detailDesc"
                android:layout_margin="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detailDesc"
                android:layout_alignStart="@+id/detailDesc"
                android:layout_below="@+id/descView"
                android:text="Lokasyon"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/detailLoca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detailPrize"
                android:layout_alignStart="@+id/detailPrize"
                android:layout_alignTop="@+id/imageView4"
                android:text="..."
                android:textSize="20sp" />

            <View
                android:id="@+id/locView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/locMap"
                android:layout_margin="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/locMap"
                android:layout_alignStart="@+id/locMap"
                android:layout_below="@+id/locView"
                android:text="Organizatör"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/detailOwnerImage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:src="@drawable/imagenotfound" />

            <TextView
                android:id="@+id/detailOwnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/detailOwnerImage"
                android:layout_toEndOf="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:maxLines="1"
                android:text="..."
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/detailOwnerImage"
                android:layout_alignLeft="@+id/detailOwnerName"
                android:layout_alignStart="@+id/detailOwnerName"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/detailOwnerT"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignLeft="@+id/linearLayout3"
                    android:layout_alignStart="@+id/linearLayout3"
                    android:layout_alignTop="@+id/linearLayout3"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/icon_twitter" />

                <ImageView
                    android:id="@+id/detailOwnerL"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignEnd="@+id/linearLayout3"
                    android:layout_alignRight="@+id/linearLayout3"
                    android:layout_alignTop="@+id/linearLayout3"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/icon_linkedin" />

                <ImageView
                    android:id="@+id/detailOwnerF"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/icon_facebook" />

                <ImageView
                    android:id="@+id/detailOwnerG"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/icon_googleplus" />

                <ImageView
                    android:id="@+id/detailOwnerI"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_instagram" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/detailOwnerImage"
                android:layout_alignStart="@+id/detailOwnerImage"
                android:layout_below="@+id/detailOwnerImage"
                android:layout_marginTop="15dp"
                android:src="@drawable/icon_mail" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/imageView13"
                android:layout_alignStart="@+id/imageView13"
                android:layout_below="@+id/imageView13"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_phone" />

            <TextView
                android:id="@+id/detailOwnerMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView13"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/imageView13"
                android:layout_toRightOf="@+id/imageView13"
                android:text="..."
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detailOwnerPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView14"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/imageView14"
                android:layout_toRightOf="@+id/imageView14"
                android:text="..."
                android:textSize="15sp" />

            <View
                android:id="@+id/ownerView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/imageView14"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView14"
                android:layout_alignStart="@+id/imageView14"
                android:layout_below="@+id/ownerView"
                android:text="Etiketler"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/detailTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="10dp"
                android:text="..."
                android:textSize="20sp" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/detailTags"
                android:layout_margin="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detailTags"
                android:layout_alignStart="@+id/detailTags"
                android:layout_below="@+id/view4"
                android:text="Paylaş"
                android:textColor="@android:color/background_dark"
                android:textColorLink="@android:color/background_dark"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11"
                android:layout_below="@+id/textView11"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/detailShareFace"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/icon_facebook" />

                <ImageView
                    android:id="@+id/detailShareTwit"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/icon_twitter" />

                <ImageView
                    android:id="@+id/detailShareIn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/icon_linkedin" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/detailTitle"
                android:layout_alignStart="@+id/detailTitle"
                android:layout_below="@+id/detailTitle"
                android:layout_marginTop="20dp"
                android:src="@drawable/date" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/imageView2"
                android:layout_alignStart="@+id/imageView2"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="10dp"
                android:src="@drawable/location" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/imageView4"
                android:layout_alignStart="@+id/imageView4"
                android:layout_below="@+id/imageView4"
                android:layout_marginTop="10dp"
                android:src="@drawable/money" />

            <TextView
                android:id="@+id/detailTimeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detailPrize"
                android:layout_alignStart="@+id/detailPrize"
                android:layout_alignTop="@+id/imageView2"
                android:text="..."
                android:textSize="19sp" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/locMap"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:enabled="true" />

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="354dp">

        <LinearLayout
            android:id="@+id/favll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/detailFavImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:src="@drawable/fav" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/choicely"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/detailChoice1Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Geleceğim"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/detailChoice2Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Belki"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/detailChoice3Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Gelmeyeceğim"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
